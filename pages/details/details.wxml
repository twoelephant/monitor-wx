<!--pages/details/details.wxml-->
<page-meta>
	<navigation-bar title="订单管理" front-color="{{nbFrontColor}}" background-color="{{nbBackgroundColor}}" color-animation-duration="2000" color-animation-timing-func="easeIn" />
</page-meta>

<view class="details">


	<view style=" margin-bottom: 5rpx;background-color: #ffffff;">

		<picker  mode="date" value="{{timeNow}}" fields="month" start="2000-09-01" end="2099-09-01" bindchange="bindDateChange">
			<view class="topde">
			
				<image class="image" src="../image/rili.png"></image>
				<view class="picker">
					<text>{{timeNow}}</text>
				</view>
				<image class="image1" src="../image/xiala.png"></image>
			</view>
		</picker>

	</view>

	<!-- 循环得到的订单信息 -->

	<view class="row1" style="background-color: #ffffff;margin-bottom: 5rpx;">
		<view style="padding: 20rpx; ">
			<view style="font-size: 30rpx;border-bottom: solid 1rpx #f2f2f2; padding-bottom: 15rpx;">
				<text class="choose">店铺名称：</text>
				<text>江场三路店</text>
			</view>
			<view style="font-size: 28rpx; margin-top: 15rpx;">
				<text class="choose1">订单号：</text>
				<text>1234567890</text>
			</view>
			<view style="font-size: 28rpx;">
				<text class="choose1">订单金额：</text>
				<text>￥6</text>
			</view>

			<view style="font-size: 28rpx;">
				<text class="choose1">付款日期：</text>
				<text>2022-09-05</text>
			</view>
		</view>
	</view>

	



</view>