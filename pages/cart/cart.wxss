/* pages/cart/cart.wxss */
.cart {
  height: 92vh;
  overflow: auto;
  background-color: #ececec;
}

.goods {
  display: flex;
  height: 33vw;
  width: 100%;
  font-size: 4vw;
  z-index: 1;
  box-sizing: border-box;
  margin: 2vw auto 0vw;
}

.goods-delete{
  width: 100vw;
  height: 100%;
}
.weui-slideview_icon .weui-slideview__btn__wrp:first-child {
  padding-left: 0;
}
 
.goodsMessage {
  background-color: #fff;
  flex: 1;
  display: flex;
  height: 98%;
  width: 96%;
  border-radius: 10px;
  padding: 3vw 0;
  margin: auto auto;
}

.goodsMessage .goodsImage {
  width: 25vw;
  height: 25vw;
  margin: auto 0;
  margin-left: 3vw;
}
.goodsImage image{
  width: 95%;
  height: 95%;
  border-radius: 10px;
}
.aboutGoods {
  height: 25vw;
  margin: auto 0;
  margin-left: 2vw;
  flex: 1;
}
.aboutGoods .theName{
  font-size: 5vw;
  font-weight: bold;
}
.aboutGoods .theMessage{
  height: 8vw;
  width: 60vw;
  overflow: hidden;
  text-overflow:ellipsis;
 font-size: 4vw;
 margin-right: 4vw;
}
.aboutGoods .goodsPrice {
  width: 65vw;
  display: flex;
}

.money {
  flex: 1;
  font-size: 4vw;
  color: #f21a0c;
}
.money text{
  font-size: 5vw;
  font-weight: bold;
}
.changeNum {
  width: 20vw;
  display: flex;
  margin-right: 4vw;
}
.changeNum image {
  width: 4vw;
  height: 4vw;
  margin: auto 0;
  padding: 0 1vw;
}

.goodsNum {
  width: 10vw;
  height: 6vw;
  line-height: 6vw;
  background-color: #f2f2f2;
  text-align: center;
}

.balance {
  position: absolute;
  bottom: 0;
  z-index: 2;
  background-color: #fff;
  height: 5vh;
  width: 95vw;
  padding: 2vw;
  line-height: 5vh;
  display: flex;
  font-size: 4vw;
}
.balance text{
  flex: 1;
}
.balance view {
  background-color: #f21a0c;
  width: 15vw;
  height: 5vh;
  border-radius: 2.5vh;
  color: #fff;
  text-align: center;
  line-height: 5vh;
  margin: auto 0;
}